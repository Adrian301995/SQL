CREATE TABLE TIENDA(ID INTEGER PRIMARY KEY, NAME TEXT, VENTAS NUMERIC, PRECIO NUMERIC, REFERENCIA NUMERIC, PASILLO NUMERIC, CENTRO_COMERCIAL NUMERIC);

