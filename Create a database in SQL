SELECT * FROM TIENDA;

SELECT * FROM TIENDA WHERE VENTAS>15
ORDER BY VENTAS desc;

select name, VENTAS * PRECIO AS ventas_totales
FROM TIENDA 
WHERE VENTAS > 15
ORDER BY ventas_totales desc;

SELECT NAME, AVG(VENTAS) AS VENTAS_PROMEDIO
FROM TIENDA
GROUP BY name;

